		<p class="bd-lead display-4">Développe tes super-pouvoirs</p>
		
<div class="row row-cols-lg-2">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="col rounded border border-primary my-5 p-3 bg-primary bg-gradient">
	<h2>Déjà venu? Connecte-toi !</h2>
	<div class="row row-cols-md-2 row-cols-lg-1 text-reset">
	  <div class="field col">
    	  <%= f.label :email %><br />
    	  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "text-dark" %>
  	  </div>
	  <div class="col">
  	  	<div class="field">
    	 	 <%= f.label "Mot de passe" %><br />
    	 	 <%= f.password_field :password, autocomplete: "current-password", class: "text-dark" %>
  	  	</div>
	  	<% if devise_mapping.rememberable? %>
    		<div class="field">
	      	  <%= f.check_box :remember_me %>
	      	  <%= f.label "Ne pas m'oublier" %>
	    	</div>
	  	<% end %>
	  </div>
  	</div>

 
    <%= f.submit "Entrer", class: 'col btn btn-lg btn-danger' %>

  
  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "Mot de passe oublié ?", new_password_path(resource_name), class: 'col btn btn-lg btn-secondary' %><br />
  <% end %>
</div>
<% end %>

<div class="col rounded border border-warning my-5 p-3 bg-warning bg-gradient">
	<h2>Première visite? Crée un compte !</h2>
	<div class="row">
		<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
		  <%= link_to "Je crée mon compte", new_registration_path(resource_name), class: 'col btn btn-lg btn-outline btn-secondary col' %><br />
		<% end %>
		
	</div>
</div>
</div>