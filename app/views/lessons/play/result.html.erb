<h1 class="display-1">Ton score : <%= @test.score %> sur <%= @test.answers.count %></h1>
<div class="row align-items-center">
	<div class="col-3 col-md-2 col-lg-1"><%= image_tag "profanity/#{current_user.profanity}.png", class:"img-fluid"%></div>
	<p class="col-9 mt-4 lead fs-2 lead fs-1"><%= profanity_feedback(@test.percentage_score,current_user) %></p>
</div>

<div class="pt-3 border-bottom"></div>

<% @test.answers.each do |answer| %>
<div class="row border-bottom pt-md-3">
	<p class="col col-12 col-md-6 text-center display-5">
		<%= @test.reverse? ? answer.translation.translated : answer.translation.original %>
	</p>

	<p class="col col-12 col-md-6 bg-<%= answer.correct? ? 'success text-white' : 'warning' %> bg-gradient rounded text-center display-5">
		<span class="<%= 'text-decoration-line-through text-secondary' unless answer.correct? %>"><%= answer.content %></span>
		<%= @test.reverse? ? answer.translation.original : answer.translation.translated unless answer.correct? %>
	</p>
</div>
<% end %>

<div class="mt-3 text-center text-md-right">
	<%= links_to_test_and_reverse(@lesson) %>
	<%= link_to "Stats", stats_lesson_path(@lesson), class:'btn btn-primary btn-lg mb-md-0 mb-2 fs-4' %>
	<%= link_to "Modifier", @lesson, class:'btn btn-primary btn-lg mb-md-0 mb-2 fs-4' %>
	<%= link_to "Retour", lessons_path, class:'btn btn-primary btn-lg mb-md-0 mb-2 fs-4' %>
</div>