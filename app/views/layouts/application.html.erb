<!DOCTYPE html>
<html>
  <head>
    <title>NDLS</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
	  
	  
	  <div class="container fs-4" style="">
		  <% unless notice.nil? %>
		  	<p class="alert alert-primary"><%= notice %></p>
		  <% end %>
		  <% unless alert.nil? %>
		  	<p class="alert alert-warning"><%= alert %></p>
		  <% end %>
		  
    	  <%= yield %>
		  
		  <% if current_user %>
		    <div class="my-5">
				<button type="button" class="btn btn-primary mb-2" disabled>
				  <%= current_user.email %>
				</button>
				
				<%= form_with(model: current_user, url: profanity_path(current_user), method: "patch", class:"disconnect") do |form| %>
				<div class="btn-group mb-2" role="group">
					<div class="btn btn-primary">Humeur</div>
					<% ["bisounours","neutre","fais_moi_mal"].each do |level| %>
						<%= form.radio_button :profanity, level, class:'btn-check' %>
						<%= form.label :profanity, level, value: level, class:'btn btn-outline-primary' %>
					<% end %>
					<%= form.submit "Changer", class:'btn btn-outline-danger' %>
				</div>
				<% end %>
				<%= button_to('DÃ©connexion',  destroy_user_session_path, method: :delete, class: 'btn btn-outline-danger mb-2', form_class:'disconnect'	)%>
			</div>
		  <% end %>
		  
		  <%= link_to "Connexion", new_user_session_path, class: 'btn btn-primary m-5' if current_user.nil? unless (controller_name == 'sessions' or controller_name == 'registrations') %>
		  
	  </div>
  </body>
</html>
